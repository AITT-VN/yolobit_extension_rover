<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="ROVER" colour="#cb2026" icon="road">
    <block type="carbitv2_move">
      <value name="speed"><shadow type="math_number"><field name="NUM">50</field></shadow></value>
    </block>
    <block type="carbitv2_move_delay">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="time">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="carbitv2_move_motor">
      <value name="left_wheel_speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="right_wheel_speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>

    <block type="carbitv2_stop"/>

    <block type="carbitv2_show_led"/>
    <block type="carbitv2_show_rgb_led">
      <value name="number_led"><shadow type="math_number"><field name="NUM">0</field></shadow></value>
      <value name="color"><shadow type="colour_picker"><field name="COLOUR">#ff0000</field></shadow></value>
    </block>
    <block type="carbitv2_show_rgb_led_all">
      <value name="color"><shadow type="colour_picker"><field name="COLOUR">#ff0000</field></shadow></value>
    </block>

    <block type="carbitv2_ultrasonic_read" />
    <block type="carbitv2_ultrasonic_detect">
      <value name="distance">
        <shadow type="math_number">
          <field name="NUM">10</field>
        </shadow>
      </value>
    </block>

    <block type="carbitv2_line_sensor_read" />
    <block type="carbitv2_line_sensor_check">
      <value name="num"><shadow type="math_number"><field name="NUM">2000</field></shadow></value>
    </block>

    <block type="carbitv2_ble_start">
      <value name="NAME">
      <shadow type="text">
      <field name="TEXT">carbit</field>
      </shadow>
      </value>
    </block>
    <block type="carbitv2_ble_on_receive_message"/>
    <block type="carbitv2_gamepad_message"/>
  </category>
</xml>
